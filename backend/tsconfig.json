{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "outDir": "./dist", 
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}